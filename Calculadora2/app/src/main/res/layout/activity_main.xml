<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="bottom"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonAc"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_sec"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonPositivoNegativo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_sec"
            android:text="⁺/₋"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonModulo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_sec"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonDividir"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="÷"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonSiete"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonOcho"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonNueve"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="x"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonCuatro"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonCinco"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonSeis"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonMenos"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="-"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonUno"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonDos"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonTres"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonSumar"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="+"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonCero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:backgroundTint="@color/grey_main"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_main"
            android:text="."
            android:textColor="@color/white"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40sp"
            app:cornerRadius="100dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>